<Window x:Class="ControleEstoque.CadastroArmazem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="CadastroArmazem" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label_nomeArmazem" Content="Local" HorizontalAlignment="Left" Margin="39,13,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_local" HorizontalAlignment="Left" Height="23" Margin="105,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_DescArmazem" Content="Descrição" HorizontalAlignment="Left" Margin="39,47,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_DescArmazem" HorizontalAlignment="Left" Height="23" Margin="105,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_salvarArmazem" Content="Salvar" HorizontalAlignment="Left" Margin="105,77,0,0" VerticalAlignment="Top" Width="120" Height="30" Background="#FF14C55C" Click="btn_salvarArmazem_Click"/>

    </Grid>
</Window>
