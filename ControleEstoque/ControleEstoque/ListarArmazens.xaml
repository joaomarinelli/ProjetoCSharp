<Window x:Class="ControleEstoque.ListarArmazens"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="ListarArmazens" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dg_ListarArmazens" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Height="230" Width="272" SelectionChanged="dg_armazens_SelectionChanged" Loaded="Window_Loaded_Armazem"/>
        <Button x:Name="btn_AddArmazem" Content="Novo registro" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="101" FontWeight="Bold" Background="#FF21C928" Click="btn_AddArmazem_Click"/>

    </Grid>
</Window>
