<Window x:Class="ControleEstoque.ListarFuncionarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="ListarFuncionarios" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Height="232" Width="272" SelectionChanged="dataGrid_SelectionChanged"/>
        <Button x:Name="btn_AddFuncionario" Content="Novo registro" HorizontalAlignment="Left" Margin="10,0,0,248" VerticalAlignment="Bottom" Width="88" Background="#FF12D447" FontWeight="Bold" Click="btn_AddFuncionario_Click"/>

    </Grid>
</Window>
