<Window x:Class="ControleEstoque.ListaMateriais"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="ListaMateriais" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dg_ListaMateriais" Margin="0,50,0,0" SelectionChanged="dg_ListaMateriais_SelectionChanged" Loaded="Window_Loaded_Materiais" IsSynchronizedWithCurrentItem="False" Background="{x:Null}"/>
        <Button x:Name="btn_AddMateriais" Content="Novo registro" Margin="11,10,0,0" Background="#FF1FC736" FontWeight="Bold" Click="btn_AddMateriais_Click" HorizontalAlignment="Left" Width="96" Height="25" VerticalAlignment="Top"/>

    </Grid>
</Window>
