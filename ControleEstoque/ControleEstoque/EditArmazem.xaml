<Window x:Class="ControleEstoque.EditArmazem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="EditArmazem" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txt_edit_localArmazem" HorizontalAlignment="Left" Height="23" Margin="116,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_edir_descArmazem" HorizontalAlignment="Left" Height="23" Margin="116,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Local" HorizontalAlignment="Left" Margin="54,32,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Descrição" HorizontalAlignment="Left" Margin="54,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_edit_salvar" Content="Salvar" HorizontalAlignment="Left" Margin="116,114,0,0" VerticalAlignment="Top" Width="120" Height="25" Click="btn_edit_salvar_Click"/>

    </Grid>
</Window>
